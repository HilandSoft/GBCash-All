@using HiLand.Utility4.MVC;
@{
    ViewBag.Title = "后台管理";
    string currentUserName = string.Empty;
    if (this.Request.RequestContext.HttpContext.User.Identity != null)
    {
        currentUserName = "管理员";//this.Request.RequestContext.HttpContext.User.Identity.Name;
    }

    string frontMainUrl = Url.Action("Index", "Home", new { area = "" });
    
    string gbcashManageUrl = VirtualPathUtility.ToAbsolute("~/") + "Manage";
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="@Url.Content("~/MVCContent/reset.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/MVCContent/style.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/MVCContent/adminStyle.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/MVCContent/notificationStyle.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/MVCContent/invalid.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/MVCContent/datePicker.css")" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/facebox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.wysiwyg.js")"></script>
    <script src="@Url.Content("~/Scripts/jQuery.hiland.general.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.form.2.84.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.tools.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.gbfSubmit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/date.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.datePicker.min-2.1.2.js")" type="text/javascript"></script>
</head>
<body>
    <div id="body-wrapper">
        <!-- Wrapper for the radial gradient background -->
        <div id="sidebar">
            <div id="sidebar-wrapper">
                <!-- Sidebar with logo and menu -->
                <h1 id="sidebar-title">
                    <a href="@frontMainUrl">GBFinance</a>
                </h1>
                <!-- Logo (221px wide) -->
                <img id="logo" style="margin-left:15px;" src="@Url.Content("~/Manage/assets/img/logo-dark.png")" alt="logo" />
                <!-- Sidebar Profile links -->
                <div id="profile-links">
                    Hello, @currentUserName
                    <br />
                    <a href="@gbcashManageUrl" title="View the Site">Back to GBCash Manage</a> | <a href="@Url.Action("Logout", "Account")" title="Sign Out">
                        Sign Out
                    </a>
                </div>
                <ul id="main-nav">
                    <!-- Accordion Menu -->
                    <li>
                        <a id="aDashboardSection" href="@Url.Action("Index", "Main")" class="nav-top-item no-submenu">
                            <!-- Add the class "no-submenu" to menu items with no sub menu -->
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a id="aSecuredLoanSection" href="#" class="nav-top-item">
                            <!-- Add the class "current" to current menu item -->
                            Secured Loan
                        </a>
                        <ul>
                            <li>
                                <a id="aSecuredLoanList" href="@Url.Action("SecuredLoanList", "Secured")">
                                    Secured
                                    Loan List
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a id="aSettingSection" href="@Url.Action("NewApplyTip", "Main")" class="nav-top-item  no-submenu">New Apply Tip</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- End #sidebar -->
        <div id="main-content">
            <!-- Page Head -->
            <p style="text-align: right">
                Welcome to Secured manage console<a name="#top"></a>
            </p>
            <div class="clear">
            </div>
            @RenderBody()
            <div id="footer">
                <small>&copy; Copyright 2011 GBCash | <a href="#top">Top</a> </small>
            </div>
        </div>
    </div>
</body>
</html>
